<% layout('layout') -%>
    <div class="container">
        <h1>Registered Sites</h1>
        <table>
            <thead>
                <tr>
                    <th>Site URL</th>
                    <th>Last Seen</th>
                    <th>Plugins</th>
                </tr>
            </thead>
            <tbody>
                <% (sites || []).forEach(function(site){ %>
                    <tr>
                        <td><a href="/plugins?site=<%= encodeURIComponent(site.siteUrl) %>">
                                <%= site.siteUrl %>
                            </a></td>
                        <td>
                            <%= site.lastSeen %>
                        </td>
                        <td>
                            <%= (site.plugins || []).join(', ') %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>