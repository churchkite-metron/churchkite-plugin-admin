<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow, noarchive">
    <title>Site Inventory</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script defer src="/js/app.js"></script>
    <style>
        .container {
            max-width: 960px;
            margin: 2rem auto;
        }

        .nav {
            margin-bottom: 1rem;
        }

        .nav a {
            margin-right: .75rem;
        }

        .card {
            border: 1px solid #ddd;
            border-radius: .5rem;
            margin-bottom: 1.5rem;
        }

        .card-header {
            background: #f5f5f5;
            padding: 1rem;
            border-bottom: 1px solid #ddd;
        }

        .card-body {
            padding: 1rem;
        }

        .form-group {
            margin-bottom: 1rem;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #ddd;
            padding: .75rem;
        }

        th {
            background: #f5f5f5;
            text-align: left;
        }

        .tag {
            display: inline-block;
            padding: .25rem .5rem;
            border-radius: .25rem;
            font-size: .875rem;
        }

        .tag-green {
            background: #d4edda;
            color: #155724;
        }

        .tag-yellow {
            background: #fff3cd;
            color: #856404;
        }

        .tag-gray {
            background: #e2e3e5;
            color: #383d41;
        }

        .alert {
            padding: .75rem 1.25rem;
            margin-bottom: 1rem;
            border: 1px solid transparent;
            border-radius: .25rem;
        }

        .alert-warning {
            color: #856404;
            background-color: #fff3cd;
            border-color: #ffeeba;
        }
    </style>
</head>

<body>
    <div class="container">
        <% if (!isProd) { %>
            <div class="badge badge-local" style="margin:.5rem 0;">Local Mode</div>
            <% } %>
                <div class="nav nav-colored">
                    <a href="/plugins">Plugins</a>
                    <a href="/sites">Sites</a>
                    <a href="/inventory">Inventory</a>
                    <span class="spacer"></span>
                    <% if (isProd) { %>
                        <a href="/logout">Logout</a>
                        <% } %>
                </div>

                <div class="page-header">
                    <h1>Site Inventory</h1>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h2>Site Selection</h2>
                    </div>
                    <div class="card-body">
                        <form method="get" action="/inventory">
                            <div class="form-group">
                                <label for="site">Select a site to view its inventory:</label>
                                <select id="site" name="site" class="form-control" onchange="this.form.submit()">
                                    <% for (const s of (sites || [])) { %>
                                        <option value="<%= s %>" <%=selectedSite===s ? 'selected' : '' %>><%= s %>
                                        </option>
                                        <% } %>
                                </select>
                            </div>
                        </form>
                    </div>
                </div>

                <% if (!selectedSite) { %>
                    <div class="alert alert-warning">No sites registered yet. Activate the connector on a WordPress site
                        to see inventory here.</div>
                    <% } else if (!inventory) { %>
                        <div class="card">
                            <div class="card-body empty-state">
                                <p>No inventory found for this site yet.</p>
                            </div>
                        </div>
                        <% } else { %>
                            <div class="card">
                                <div class="card-header">
                                    <h2>Inventory for <%= selectedSite %>
                                    </h2>
                                    <small>Collected: <%= inventory.collectedAt %></small>
                                </div>
                                <div class="card-body">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>Plugin</th>
                                                <th>Slug</th>
                                                <th>Version</th>
                                                <th>Active</th>
                                                <th>Update</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (const p of (inventory.plugins || [])) { %>
                                                <tr>
                                                    <td>
                                                        <%= p.name %>
                                                    </td>
                                                    <td>
                                                        <%= p.slug %>
                                                    </td>
                                                    <td>
                                                        <%= p.version %>
                                                    </td>
                                                    <td>
                                                        <% if (p.active) { %>
                                                            <span class="tag tag-green">Yes</span>
                                                            <% } else { %>
                                                                <span class="tag tag-gray">No</span>
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <% if (p.updateAvailable) { %>
                                                            <span class="tag tag-yellow">Yes â†’ <%= p.newVersion || '' %>
                                                                    </span>
                                                            <% } else { %>
                                                                <span class="tag tag-gray">No</span>
                                                                <% } %>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <% } %>
    </div>
</body>

</html>