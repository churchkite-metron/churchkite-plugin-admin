<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plugin Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container">
        <h1>Manage Plugins</h1>
        <form method="GET" action="/plugins" style="margin-bottom: 1rem;">
            <label for="site">Site:</label>
            <select name="site" id="site" onchange="this.form.submit()">
                <% (sites || []).forEach(function(site) { %>
                    <option value="<%= site %>" <%=selectedSite===site ? 'selected' : '' %>><%= site %>
                    </option>
                    <% }) %>
            </select>
        </form>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Version</th>
                    <th>Active</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                <% (plugins || []).forEach(plugin=> { %>
                    <tr>
                        <td>
                            <%= plugin.name %>
                        </td>
                        <td>
                            <%= plugin.slug %>
                        </td>
                        <td>
                            <%= plugin.version %>
                        </td>
                        <td>
                            <%= plugin.active ? 'Yes' : 'No' %>
                        </td>
                        <td>
                            <% if (plugin.updateAvailable) { %>
                                <span style="color:#b26a00;">Yes â†’ <%= plugin.newVersion || '' %></span>
                                <% } else { %>
                                    No
                                    <% } %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</body>

</html>