<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow, noarchive">
    <title>Plugin Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container">
        <% if (!isProd) { %>
            <div class="badge badge-local" style="margin:.5rem 0;">Local Mode</div>
            <% } %>
                <div class="nav nav-colored">
                    <a href="/plugins">Plugins</a>
                    <a href="/sites">Sites</a>
                    <a href="/inventory">Inventory</a>
                    <span class="spacer"></span>
                    <% if (isProd) { %>
                        <a href="/logout">Logout</a>
                        <% } %>
                </div>
                <div class="page-header">
                    <h1>Manage Plugins</h1>
                </div>
                <% if (typeof message==='string' && message) { %>
                    <div class="alert alert-warning">
                        <%= message %>
                    </div>
                    <% } %>
                        <div class="card">
                            <div class="card-header">
                                <h2>Site Selection</h2>
                            </div>
                            <div class="card-body">
                                <form method="GET" action="/plugins">
                                    <div class="form-group">
                                        <label for="site">Select a site to view its plugins:</label>
                                        <select name="site" id="site" class="form-control"
                                            onchange="this.form.submit()">
                                            <% for (const site of (sites || [])) { %>
                                                <option value="<%= site %>" <%=selectedSite===site ? 'selected' : '' %>>
                                                    <%= site %>
                                                </option>
                                                <% } %>
                                        </select>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="card">
                            <div class="card-header">
                                <h2>Plugin Status</h2>
                            </div>
                            <div class="card-body">
                                <% if (!plugins || plugins.length===0) { %>
                                    <div class="empty-state">
                                        <p>No plugins to display for this site.</p>
                                    </div>
                                    <% } else { %>
                                        <div class="table-wrap">
                                            <table class="table">
                                                <thead>
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Slug</th>
                                                        <th>Version</th>
                                                        <th>Active</th>
                                                        <th>Update</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% for (const plugin of (plugins || [])) { %>
                                                        <tr>
                                                            <td>
                                                                <%= plugin.name %>
                                                            </td>
                                                            <td>
                                                                <%= plugin.slug %>
                                                            </td>
                                                            <td>
                                                                <%= plugin.version %>
                                                            </td>
                                                            <td>
                                                                <% if (plugin.active) { %>
                                                                    <span class="tag tag-green">Yes</span>
                                                                    <% } else { %>
                                                                        <span class="tag tag-gray">No</span>
                                                                        <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (plugin.updateAvailable) { %>
                                                                    <span class="tag tag-yellow">Yes â†’ <%=
                                                                            plugin.newVersion || '' %>
                                                                    </span>
                                                                    <% } else { %>
                                                                        <span class="tag tag-gray">No</span>
                                                                        <% } %>
                                                            </td>
                                                        </tr>
                                                        <% } %>
                                                </tbody>
                                            </table>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
    </div>
</body>

</html>