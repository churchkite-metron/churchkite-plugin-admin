<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow, noarchive">
    <title>Plugin Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container">
        <% if (!isProd) { %>
            <div class="badge badge-local" style="margin:.5rem 0;">Local Mode</div>
            <% } %>
                <div class="nav nav-colored">
                    <a href="/plugins">Plugins</a>
                    <a href="/sites">Sites</a>
                    <a href="/inventory">Inventory</a>
                    <span class="spacer"></span>
                    <% if (isProd) { %>
                        <a href="/logout">Logout</a>
                        <% } %>
                </div>
                <h1>Manage Plugins</h1>
                <% if (typeof message==='string' && message) { %>
                    <div class="alert alert-warning">
                        <%= message %>
                    </div>
                    <% } %>
                        <form method="GET" action="/plugins" style="margin-bottom: .5rem;">
                            <label for="site">Site:</label>
                            <select name="site" id="site" onchange="this.form.submit()">
                                <% for (const site of (sites || [])) { %>
                                    <option value="<%= site %>" <%=selectedSite===site ? 'selected' : '' %>><%= site %>
                                    </option>
                                    <% } %>
                            </select>
                        </form>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Slug</th>
                                    <th>Version</th>
                                    <th>Active</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for (const plugin of (plugins || [])) { %>
                                    <tr>
                                        <td>
                                            <%= plugin.name %>
                                        </td>
                                        <td>
                                            <%= plugin.slug %>
                                        </td>
                                        <td>
                                            <%= plugin.version %>
                                        </td>
                                        <td>
                                            <%= plugin.active ? 'Yes' : 'No' %>
                                        </td>
                                        <td>
                                            <% if (plugin.updateAvailable) { %>
                                                <span class="tag tag-yellow">Yes â†’ <%= plugin.newVersion || '' %></span>
                                                <% } else { %>
                                                    <span class="tag tag-gray">No</span>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% } %>
                            </tbody>
                        </table>
    </div>
</body>

</html>