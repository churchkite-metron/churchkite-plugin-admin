<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex, nofollow, noarchive">
    <title>Plugin Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="container">
        <% if (!isProd) { %>
            <div
                style="background:#eef6ff;border:1px solid #b6daff;color:#084298;padding:.25rem .5rem;display:inline-block;border-radius:4px;margin-bottom:.5rem;">
                Local Mode
            </div>
            <% } %>
                <div class="nav" style="margin-bottom:1rem;">
                    <a href="/plugins">Plugins</a>
                    <a href="/sites">Sites</a>
                    <a href="/inventory">Inventory</a>
                    <% if (isProd) { %>
                        <a href="/logout" style="float:right">Logout</a>
                        <% } %>
                </div>
                <h1>Manage Plugins</h1>
                <% if (typeof message==='string' && message) { %>
                    <div
                        style="background:#fff3cd;border:1px solid #ffe69c;padding:.75rem 1rem;margin-bottom:1rem;color:#664d03;">
                        <%= message %>
                    </div>
                    <% } %>
                        <form method="GET" action="/plugins" style="margin-bottom: 1rem;">
                            <label for="site">Site:</label>
                            <select name="site" id="site" onchange="this.form.submit()">
                                <% (sites || []).forEach(function(site) { %>
                                    <option value="<%= site %>" <%=selectedSite===site ? 'selected' : '' %>><%= site %>
                                    </option>
                                    <% }) %>
                            </select>
                        </form>
                        <table>
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Slug</th>
                                    <th>Version</th>
                                    <th>Active</th>
                                    <th>Update</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (!plugins || plugins.length===0) { %>
                                    <tr>
                                        <td colspan="5" style="color:#555;">No plugins to show for the selected site.
                                        </td>
                                    </tr>
                                    <% } %>
                                        <% (plugins || []).forEach(plugin=> { %>
                                            <tr>
                                                <td>
                                                    <%= plugin.name %>
                                                </td>
                                                <td>
                                                    <%= plugin.slug %>
                                                </td>
                                                <td>
                                                    <%= plugin.version %>
                                                </td>
                                                <td>
                                                    <%= plugin.active ? 'Yes' : 'No' %>
                                                </td>
                                                <td>
                                                    <% if (plugin.updateAvailable) { %>
                                                        <span style="color:#b26a00;">Yes â†’ <%= plugin.newVersion || ''
                                                                %></span>
                                                        <% } else { %>
                                                            No
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                            </tbody>
                        </table>
    </div>
</body>

</html>