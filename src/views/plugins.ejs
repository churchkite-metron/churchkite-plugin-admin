<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Plugin Management</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container">
        <h1>Manage Plugins</h1>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% plugins.forEach(plugin => { %>
                    <tr>
                        <td><%= plugin.name %></td>
                        <td><%= plugin.status %></td>
                        <td>
                            <form action="/plugins/update/<%= plugin.id %>" method="POST">
                                <button type="submit">Toggle Status</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>